# Geometry module - provides geometric constants and functions

const PI = 3.14159

const circleArea = function(radius: float): float {
  return PI * radius ** 2
}

const circleCircumference = function(radius: float): float {
  return 2 * PI * radius
}

const Rectangle = model {
  width: float
  height: float

  area = function(): float {
    return this.width * this.height
  }

  perimeter = function(): float {
    return 2 * (this.width + this.height)
  }
}
